{% extends 'base.html.twig' %}

{% block title %}Reminder{% endblock %}

{% block body %}
<h1 class "text-xl font-bold mb6">Reminder Details</h1>

<div class "bg-white shadow-lg rounded-lg p8 mb6">
    <table class "min-w-full">
        <tbody>
            <tr class "border-b">
                <th class "py3 text-left text-gray600">Id</th>
                <td class "py3">{{ reminder.id }}</td>
            </tr>
            <tr class "border-b">
                <th class "py3 text-left text-gray600">Title</th>
                <td class "py3">{{ reminder.title }}</td>
            </tr>
            <tr class "border-b">
                <th class "py3 text-left text-gray600">Created Date</th>
                <td class "py3">{{ reminder.createdDate ? reminder.createdDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr> 
            <trclass "border-b">
                <thclass "py3 text-left text-gray600">Limit Date</th> 
                <tdclass "py3">{{ reminder.limitDate ? reminder.limitDate|date('Y-m-d H:i:s') : '' }}</td> 
            </tr> 
            <trclass "border-b"> 
                <<thclass "py3 text-left text-gray600">Is Done</th> 
                <<tdclass "py3">{{ reminder.isDone ? 'Yes' : 'No' }}</td> 
            </tr> 
        </tbody> 
    </table> 
</div>

<divclass "flex justify-center pl20 space-x6"> 
    <a href="{{ path('app_reminder_index') }}" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded transition duration-300 ease-in-out">Retour Ã  la liste</a> 
    <a href="{{ path('app_reminder_edit', {'id': reminder.id}) }}" class="bg-yellow-500 hover:bg-yellow-600 text-white px5 py3 rounded-lg hover:bg-yellow700 transition duration200">Modifier</a> 
    {{ include('reminder/_delete_form.html.twig', {'reminder': reminder}) }} 
</div> 
{% endblock %}