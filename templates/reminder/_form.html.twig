<form method="post" action="{{ path('app_reminder_new') }}" class="space-y-6">

    <div class="flex gap-6">
        <!-- Colonne droite -->
        <div class="w-1/2 space-y-6">
            <div>
                <label for="reminder_title" class="block text-sm font-medium text-gray-700 pb-3">Titre</label>
                <input type="text" id="reminder_title" name="reminder[title]" 
                       class="w-full border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>

            <div>
                <label for="reminder_limit_date" class="block text-sm font-medium text-gray-700 pb-3">Date limite</label>
                <input type="datetime-local" id="reminder_limit_date" name="reminder[limitDate]" 
                       class="w-full border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-blue-500" 
                       value="{{ reminder.limitDate ? reminder.limitDate|date('Y-m-d\TH:i') : '' }}">
            </div>
        </div>
    </div>

    <div class="flex items-center">
        <input type="checkbox" id="reminder_is_done" name="reminder[isDone]" 
               class="h-5 w-5 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
        <label for="reminder_is_done" class="ml-2 text-sm font-medium text-gray-700">Est terminÃ©</label>
    </div>

    <input type="hidden" name="_token" value="{{ csrf_token('reminder_item') }}">

    <div>
        <button type="submit" class="bg-blue-600 text-white px-5 py-3 rounded-lg hover:bg-blue-700 transition duration-200">
            {{ button_label|default('Enregistrer') }}
        </button>
    </div>
</form>