{% extends 'base.html.twig' %}

{% block title %}Category Index{% endblock %}

{% block body %}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} mb-4 p-4 rounded-lg {% if label == 'success' %}bg-green-100 text-green-700{% elseif label == 'error' %}bg-red-100 text-red-700{% else %}bg-blue-100 text-blue-700{% endif %}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <h1 class="text-2xl font-bold mb-4">Category Index</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        {% for category in categories %}
            <div class="bg-white shadow-md rounded-lg p-4">
                <h2 class="text-lg font-semibold">{{ category.name }}</h2>
                <p class="text-gray-600">ID: {{ category.id }}</p>
                <div class="mt-4">
                    <a href="{{ path('app_category_show', {'id': category.id}) }}" class="bg-blue-500 text-white px-3 py-1 rounded hover:bg-blue-600">Show</a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="bg-yellow-500 text-white px-3 py-1 rounded hover:bg-yellow-600">Edit</a>
                    <form action="{{ path('app_category_delete', {'id': category.id}) }}" method="post" style="display:inline;">
                        <input type="submit" value="Delete" class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600 cursor-pointer">
                    </form>
                </div>
            </div>
        {% else %}
            <div class="col-span-full bg-gray-200 text-center p-4 rounded-lg">
                No records found
            </div>
        {% endfor %}
    </div>

    <div class="mt-6">
        <a href="{{ path('app_category_new') }}" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">Create New</a>
    </div>
{% endblock %}