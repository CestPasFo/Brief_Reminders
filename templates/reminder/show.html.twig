{% extends 'base.html.twig' %}

{% block title %}Reminder{% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold mb-6">Reminder</h1>

    <div class="bg-white shadow-lg rounded-lg p-8 mb-6">
        <table class="min-w-full">
            <tbody>
                <tr class="border-b">
                    <th class="py-3 text-left text-gray-600">Id</th>
                    <td class="py-3">{{ reminder.id }}</td>
                </tr>
                <tr class="border-b">
                    <th class="py-3 text-left text-gray-600">Title</th>
                    <td class="py-3">{{ reminder.title }}</td>
                </tr>
                <tr class="border-b">
                    <th class="py-3 text-left text-gray-600">Created Date</th>
                    <td class="py-3">{{ reminder.createdDate ? reminder.createdDate|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr class="border-b">
                    <th class="py-3 text-left text-gray-600">Limit Date</th>
                    <td class="py-3">{{ reminder.limitDate ? reminder.limitDate|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr class="border-b">
                    <th class="py-3 text-left text-gray-600">Is Done</th>
                    <td class="py-3">{{ reminder.isDone ? 'Yes' : 'No' }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="flex space-x-6">
        <a href="{{ path('app_reminder_index') }}" class="bg-gray-600 text-white px-5 py-3 rounded-lg hover:bg-gray-700 transition duration-200">Back to List</a>
        <a href="{{ path('app_reminder_edit', {'id': reminder.id}) }}" class="bg-yellow-600 text-white px-5 py-3 rounded-lg hover:bg-yellow-700 transition duration-200">Edit</a>
        {{ include('reminder/_delete_form.html.twig') }}
    </div>
{% endblock %}