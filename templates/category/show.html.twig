{% extends 'base.html.twig' %}

{% block title %}Détails de la Catégorie{% endblock %}

{% block body %}

<nav class="navbar navbar-expand-lg bg-green-900 navbar-light bg-light flex justify-between items-center p-3">
    <a class="navbar-brand" href="{{ path('app_home') }}">
        <img src="{{ asset('logo.svg') }}" alt="Logo" style="height: 68px !important;" class="ml-4">
    </a>
    <div class="flex space-x-4">
    <a href="{{ path('app_reminder_index') }}" class="bg-green-400 hover:bg-green-500 font-bold text-zinc-400 py-2 px-4 tracking-wide rounded transition duration-300 ease-in-out">
        Reminders
    </a>
    <a href="{{ path('app_category_index') }}" class="bg-green-400 hover:bg-green-500 font-bold text-zinc-400 py-2 px-4 tracking-wide rounded transition duration-300 ease-in-out">
        Categories
    </a>
    </div>
</nav>

<div class="flex justify-center pt-4"> 
    <h1 class="text-2xl font-bold mb-4">Détails de la Catégorie</h1>
</div>
<div class="bg-white shadow-md rounded-lg p-6">
    <table class="min-w-full">
        <tbody>
            <tr class="border-b">
                <th class="text-left py-2">ID</th>
                <td class="py-2">{{ category.id }}</td>
            </tr>
            <tr class="border-b">
                <th class="text-left py-2">Nom</th>
                <td class="py-2">{{ category.name }}</td>
            </tr>
        </tbody>
    </table>
</div>

<div class="space-x-4 flex justify-center mt-6 gap-4">
    <a href="{{ path('app_category_index') }}" class="bg-gray-300 text-gray-800 px-4 py-2 rounded hover:bg-gray-400">Retour à la liste</a>
    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600">Modifier</a>
    {{ include('category/_delete_form.html.twig') }}
</div>
{% endblock %}