<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Reminder App</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <div class="container mx-auto p-4">
        <h1 class="text-3xl font-bold mb-4">Reminder App</h1>
        
        <div class="grid grid-cols-2 gap-4 mb-4">
            <button id="showCategories" class="bg-blue-500 text-white p-2 rounded">Afficher les catégories et reminders</button>
            <button id="showDueReminders" class="bg-green-500 text-white p-2 rounded">Afficher les reminders à faire</button>
        </div>

        <div class="grid grid-cols-2 gap-4">
            <div>
                <h2 class="text-xl font-bold mb-2">Catégories</h2>
                <button class="bg-indigo-500 text-white p-2 rounded mb-2" onclick="location.href='/categories/new'">Nouvelle catégorie</button>
                <!-- Ajoutez les autres boutons CRUD pour les catégories -->
            </div>
            <div>
                <h2 class="text-xl font-bold mb-2">Reminders</h2>
                <button class="bg-indigo-500 text-white p-2 rounded mb-2" onclick="location.href='/reminders/new'">Nouveau reminder</button>
                <!-- Ajoutez les autres boutons CRUD pour les reminders -->
            </div>
        </div>

        <div id="results" class="mt-4"></div>
    </div>

    <script>
        document.getElementById('showCategories').addEventListener('click', () => {
            fetch('/api/categories')
                .then(response => response.json())
                .then(data => {
                    // Affichez les catégories et les reminders associés
                });
        });

        document.getElementById('showDueReminders').addEventListener('click', () => {
            fetch('/api/reminders/due')
                .then(response => response.json())
                .then(data => {
                    // Affichez les reminders à faire
                });
        });
    </script>
</body>
</html>