{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold mb-4">Category</h1>

    <div class="bg-white shadow-md rounded-lg p-6">
        <table class="min-w-full">
            <tbody>
                <tr class="border-b">
                    <th class="text-left py-2">Id</th>
                    <td class="py-2">{{ category.id }}</td>
                </tr>
                <tr class="border-b">
                    <th class="text-left py-2">Name</th>
                    <td class="py-2">{{ category.name }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="mt-6 space-x-4">
        <a href="{{ path('app_category_index') }}" class="bg-gray-300 text-gray-800 px-4 py-2 rounded hover:bg-gray-400">Back to List</a>
        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600">Edit</a>
        <form action="{{ path('app_category_delete', {'id': category.id}) }}" method="post" style="display:inline;">
                        <input type="submit" value="Delete" class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600 cursor-pointer">
                    </form>
    </div>
{% endblock %}