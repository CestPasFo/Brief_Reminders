<form method="post" action="{{ path('app_reminder_delete', {'id': reminder.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="inline-block mt-4">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reminder.id) }}">
    <button type="submit" class="bg-red-600 text-white font-semibold px-5 py-3 rounded-lg shadow-md hover:bg-red-700 transition duration-200">Delete</button>
</form>